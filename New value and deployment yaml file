# ===========================================
# values.yaml for Epay_Operations_Service
# ===========================================

replicaCount: 1

image:
  repository: "epaynonprod-registry-quay-quay-enterprise.apps.preprod.epay.sbi/microservices/{{ .Chart.Name }}"
  pullPolicy: IfNotPresent
  tag: "v0.1.54"

imagePullSecrets:
  - name: microservices-perf-pull-secret

nameOverride: ""
fullnameOverride: ""

serviceAccount:
  create: true
  automount: true
  annotations: {}
  name: ""

podAnnotations:
  sidecar.istio.io/inject: "true"   # ✅ enables automatic sidecar injection

podLabels: {}

podSecurityContext: {}
securityContext: {}

service:
  type: ClusterIP
  port: 9097

# Namespace and gateway configuration
namespace: perf-rns
gatewayName: perf-istio-system/epay-perf-gateway
virtualServiceName: ops-operationsservice
serviceName: ops-operationsservice
prefixName: /api/rns/v1/
servicePort: 9097
gatewayPort: 80
gatewayHost: "perf.epay.sbi"

# ConfigMap configuration
configMap: 
  additionalLabels: {}
  annotations: {}
  nameSuffix: "config"

resources:
  requests:
    memory: "2Gi"
    cpu: "2"
  limits:
    memory: "4Gi"
    cpu: "3"

ingress: {}

readinessProbe:
  enabled: false
livenessProbe:
  enabled: false

# Horizontal Pod Autoscaler
hpa:
  enabled: true
  minReplicas: 10
  maxReplicas: 20
  targetCPUUtilizationPercentage: 70
  targetMemoryUtilizationPercentage: 80
  behavior:
    scaleUp:
      stabilizationWindowSeconds: 60
      policies:
      - type: Percent
        value: 50
        periodSeconds: 60
    scaleDown:
      stabilizationWindowSeconds: 300
      policies:
      - type: Percent
        value: 10
        periodSeconds: 60

volumes:
  - name: config
    configMap:
      name: ops-config

volumeMounts:
  - name: config
    mountPath: "/opt/gradle"
    readOnly: true

nodeSelector: {}
tolerations: []
affinity: {}

&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&

# ===========================================
# deployment.yaml for Epay_Operations_Service
# ===========================================

apiVersion: apps/v1
kind: Deployment
metadata:
  name: {{ include "Epay_Operations_Service.fullname" . }}
  labels:
    {{- include "Epay_Operations_Service.labels" . | nindent 4 }}
spec:
  {{- if not .Values.hpa.enabled }}
  replicas: {{ .Values.replicaCount }}
  {{- end }}
  selector:
    matchLabels:
      {{- include "Epay_Operations_Service.selectorLabels" . | nindent 6 }}
  template:
    metadata:
      annotations:
        {{- toYaml .Values.podAnnotations | nindent 8 }}   # ✅ enable sidecar injection
      labels:
        {{- include "Epay_Operations_Service.selectorLabels" . | nindent 8 }}
        {{- with .Values.podLabels }}
        {{- toYaml . | nindent 8 }}
        {{- end }}
    spec:
      {{- with .Values.imagePullSecrets }}
      imagePullSecrets:
        {{- toYaml . | nindent 8 }}
      {{- end }}
      serviceAccountName: {{ include "Epay_Operations_Service.serviceAccountName" . }}
      securityContext:
        {{- toYaml .Values.podSecurityContext | nindent 8 }}
      containers:
        - name: {{ .Chart.Name }}
          image: "{{ tpl .Values.image.repository $ }}:{{ .Values.image.tag | default .Chart.AppVersion }}"
          imagePullPolicy: {{ .Values.image.pullPolicy }}
          ports:
            - name: http
              containerPort: {{ .Values.service.port }}
              protocol: TCP
          env:
            - name: SPRING_CONFIG_LOCATION
              value: file:/opt/gradle/
          {{- if .Values.readinessProbe.enabled }}
          readinessProbe:
            httpGet:
              path: {{ .Values.prefixName }}actuator/health
              port: {{ .Values.service.port }}
            initialDelaySeconds: 30
            periodSeconds: 10
          {{- end }}
          {{- if .Values.livenessProbe.enabled }}
          livenessProbe:
            httpGet:
              path: {{ .Values.prefixName }}actuator/health
              port: {{ .Values.service.port }}
            initialDelaySeconds: 60
            periodSeconds: 20
          {{- end }}
          resources:
            {{- toYaml .Values.resources | nindent 12 }}
          {{- if .Values.volumeMounts }}
          volumeMounts:
            {{- toYaml .Values.volumeMounts | nindent 12 }}
          {{- end }}
      {{- if .Values.volumes }}
      volumes:
        {{- toYaml .Values.volumes | nindent 8 }}
      {{- end }}
      {{- with .Values.nodeSelector }}
      nodeSelector:
        {{- toYaml . | nindent 8 }}
      {{- end }}
